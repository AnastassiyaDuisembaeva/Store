<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_authentication"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".AddNewBookActivity">


    <EditText
        android:layout_width="250dp"
        android:layout_height="50dp"
        android:id="@+id/name"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="145dp"
        android:hint="Название"
        android:textSize="20sp"/>

    <EditText
        android:id="@+id/author"
        android:layout_width="250dp"
        android:layout_height="50dp"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/name"
        android:hint="Автор"
        android:textSize="20sp" />

    <EditText
        android:layout_width="250dp"
        android:layout_height="50dp"
        android:id="@+id/bookGanre"
        android:layout_centerHorizontal="true"
        android:hint="Жанр"
        android:textSize="20sp"
        android:layout_below="@+id/author"
        />
    <EditText
        android:id="@+id/price"
        android:layout_width="250dp"
        android:layout_height="50dp"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/bookGanre"
        android:hint="Цена"
        android:textSize="20sp"
        />
    <EditText
        android:id="@+id/imageBook"
        android:layout_width="250dp"
        android:layout_height="50dp"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/price"
        android:hint="Адрес изображения"
        android:textSize="20sp"
        />
    <Button
        android:id="@+id/add_new_book"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Добавить"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/imageBook"/>
</RelativeLayout>